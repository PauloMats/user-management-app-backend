PORT=3001

# Configurações do Banco de Dados (PostgreSQL ou MySQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432 # Porta padrão do PostgreSQL. Para MySQL, geralmente 3306
DATABASE_USER=postgres # Usuário do banco
DATABASE_PASSWORD=sua_senha_segura # Senha do usuário do banco
DATABASE_NAME=conectar_db # Nome do banco de dados

# Configurações do JWT
JWT_SECRET=coloque_uma_chave_secreta_bem_longa_e_aleatoria_aqui
JWT_EXPIRATION_TIME=3600s # Tempo de expiração do token (ex: 60s, 10m, 1h, 1d)

